<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                        http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
    version="3.1" metadata-complete="true">

    <description>WebDavServlet test application</description>
    <display-name>Shadowhunt WebDavServletTest</display-name>

    <servlet>
        <servlet-name>webdav</servlet-name>
        <servlet-class>de.shadowhunt.servlet.WebDavServlet</servlet-class>
        <init-param>
            <param-name>infiniteDepthRequests</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>listing</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>listingCss</param-name>
            <param-value>/style.css</param-value>
        </init-param>
        <init-param>
            <param-name>writeable</param-name>
            <param-value>true</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>webdav</servlet-name>
        <url-pattern>/webdav/*</url-pattern>
    </servlet-mapping>

    <security-constraint>
        <display-name>WebDav read-only operations</display-name>
        <web-resource-collection>
            <web-resource-name>WebDav Servlet</web-resource-name>
            <url-pattern>/webdav/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>PROPFIND</http-method>

        </web-resource-collection>
        <!--auth-constraint>
            <role-name>WEBDAV_RO</role-name>
        </auth-constraint-->
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <security-constraint>
        <display-name>WebDav write operations</display-name>
        <web-resource-collection>
            <web-resource-name>WebDav Servlet</web-resource-name>
            <url-pattern>/webdav/*</url-pattern>
            <http-method>COPY</http-method>
            <http-method>DELETE</http-method>
            <http-method>LOCK</http-method>
            <http-method>MKCOL</http-method>
            <http-method>MOVE</http-method>
            <http-method>PROPPATCH</http-method>
            <http-method>PUT</http-method>
            <http-method>UNLOCK</http-method>
        </web-resource-collection>
        <!--auth-constraint>
            <role-name>WEBDAV_RW</role-name>
        </auth-constraint-->
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
</web-app>
